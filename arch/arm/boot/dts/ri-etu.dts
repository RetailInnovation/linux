/dts-v1/;
#include <include/dt-bindings/gpio/gpio.h>
#include "imx28.dtsi"

/ {
	model = "Retail Innovation ETU";
	compatible = "ri,ri-etu", "fsl,imx28";

	chosen {
		bootargs = "console=ttyAM0,115200 rootfstype=ubifs ubi.mtd=rootfs root=ubi0_0 rw";
	};

	memory {
		reg = <0x40000000 0x08000000>;
	};

	apb@80000000 {
		apbh@80000000 {

			gpmi-nand@8000c000 {
			        #address-cells = <1>;
				#size-cells = <1>;

				pinctrl-names = "default";
				pinctrl-0 = <&gpmi_pins_a &gpmi_status_cfg>;
				status = "okay";
			};

			ssp2: ssp@80014000 {
				#address-cells = <1>;
				#size-cells = <0>;
				compatible = "fsl,imx28-spi";
				pinctrl-names = "default";
				pinctrl-0 = <&spi2_pins_a>;
				status = "okay";

				flash: m25p80@0 {
					#address-cells = <1>;
					#size-cells = <1>;
					compatible = "eon,en25q80a";
					spi-max-frequency = <40000000>;
					reg = <0>;

					partition@0x00000000 {
						label = "spi-nor";
						reg = <0x00000000 0x00100000>;
					};
				};
			};

			pinctrl@80018000 {
				pinctrl-names = "default";
				pinctrl-0 = <&hog_pins_a &hog_pins_pullup_a
						&hog_pins_1v8_a>;

				hog_pins_a: hog@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_GPMI_CE2N__GPIO_0_18
						MX28_PAD_GPMI_CE3N__GPIO_0_19
						MX28_PAD_GPMI_RDY1__GPIO_0_21
						MX28_PAD_GPMI_RDY2__GPIO_0_22
						MX28_PAD_SSP0_DATA0__GPIO_2_0
						MX28_PAD_SSP0_DATA1__GPIO_2_1
						MX28_PAD_SSP0_DATA2__GPIO_2_2
						MX28_PAD_SSP0_DATA3__GPIO_2_3
						MX28_PAD_SSP0_DATA4__GPIO_2_4
						MX28_PAD_SSP0_DATA5__GPIO_2_5
						MX28_PAD_SSP0_DATA6__GPIO_2_6
						MX28_PAD_SSP0_DATA7__GPIO_2_7
						MX28_PAD_SSP0_CMD__GPIO_2_8
						MX28_PAD_SSP0_DETECT__GPIO_2_9
						MX28_PAD_SSP0_SCK__GPIO_2_10
						MX28_PAD_SSP1_SCK__GPIO_2_12
						MX28_PAD_SPDIF__GPIO_3_27
						MX28_PAD_PWM3__GPIO_3_28
						MX28_PAD_LCD_RESET__GPIO_3_30
						MX28_PAD_ENET0_TX_CLK__GPIO_4_5
						MX28_PAD_ENET0_RXD2__GPIO_4_9
						MX28_PAD_ENET0_RXD3__GPIO_4_10
						MX28_PAD_ENET0_RX_CLK__GPIO_4_13
						MX28_PAD_ENET0_COL__GPIO_4_14
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				hog_pins_pullup_a: hog-pullup {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_SSP1_DATA0__GPIO_2_14
						MX28_PAD_SSP1_DATA3__GPIO_2_15
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_HIGH>;
					fsl,pull-up = <MXS_PULL_ENABLE>;
				};

				hog_pins_1v8_a: hog_1v8 {
					fsl,pinmux-ids = <
						MX28_PAD_SSP1_CMD__GPIO_2_13
						MX28_PAD_SSP3_SCK__GPIO_2_24
						MX28_PAD_SSP3_MOSI__GPIO_2_25
						MX28_PAD_SSP3_MISO__GPIO_2_26
						MX28_PAD_SSP3_SS0__GPIO_2_27
						MX28_PAD_ENET0_TXD2__GPIO_4_11
						MX28_PAD_ENET0_TXD3__GPIO_4_12
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_LOW>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};

				auart0_pins_1v8_a: auart0_1v8@0 {
					reg = <0>;
					fsl,pinmux-ids = <
						MX28_PAD_AUART0_RX__AUART0_RX
						MX28_PAD_AUART0_TX__AUART0_TX
						MX28_PAD_AUART0_CTS__AUART0_CTS
						MX28_PAD_AUART0_RTS__AUART0_RTS
					>;
					fsl,drive-strength = <MXS_DRIVE_4mA>;
					fsl,voltage = <MXS_VOLTAGE_LOW>;
					fsl,pull-up = <MXS_PULL_DISABLE>;
				};
			};
		};

		apbx@80040000 {
			saif0: saif@80042000 {
				pinctrl-names = "default";
				pinctrl-0 = <&saif0_pins_a>;
				status = "okay";
			};

			saif1: saif@80046000 {
				pinctrl-names = "default";
				pinctrl-0 = <&saif1_pins_a>;
				fsl,saif-master = <&saif0>;
				status = "okay";
			};

			lradc@80050000 {
				status = "okay";
				fsl,lradc-touchscreen-wires = <4>;
				fsl,ave-ctrl = <4>;
				fsl,ave-delay = <2>;
				fsl,settling = <10>;
			};

			pwm: pwm@80064000 {
				pinctrl-names = "default";
				pinctrl-0 = <&pwm2_pins_a>;
				status = "okay";
			};

			duart: serial@80074000 {
				pinctrl-names = "default";
				pinctrl-0 = <&duart_pins_a>;
				status = "okay";
			};

			auart0: serial@8006a000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart0_pins_1v8_a>;
				status = "okay";
			};

			auart1: serial@8006c000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart1_pins_a>;
				status = "okay";
			};

			auart2: serial@8006e000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart2_pins_a>;
				status = "okay";
			};

			auart3: serial@80070000 {
				pinctrl-names = "default";
				pinctrl-0 = <&auart3_pins_a>;
				status = "okay";
			};

			usbphy0: usbphy@8007c000 {
				status = "okay";
			};

			usbphy1: usbphy@8007e000 {
				status = "okay";
			};

			i2c0: i2c@80058000 {
				pinctrl-names = "default";
				pinctrl-0 = <&i2c0_pins_a>;
				status = "okay";
			};
		};
	};

	ahb@80080000 {
		usb0: usb@80080000 {
			dr_mode = "peripheral";
			status = "okay";
		};

		usb1: usb@80090000 {
			status = "okay";
		};

		mac0: ethernet@800f0000 {
			phy-mode = "rmii";
			pinctrl-names = "default";
			pinctrl-0 = <&mac0_pins_a>;
			phy-reset-gpios = <&gpio4 13 0>;
			phy-reset-duration = <100>;
			status = "okay";
		};
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_3p3v: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "3P3V";
			regulator-min-microvolt = <3300000>;
			regulator-max-microvolt = <3300000>;
			regulator-always-on;
		};

		reg_1p8v: regulator@1 {
			compatible = "regulator-fixed";
			reg = <1>;
			regulator-name = "1P8V";
			regulator-min-microvolt = <1800000>;
			regulator-max-microvolt = <1800000>;
			regulator-always-on;
		};

		reg_5v: regulator@2 {
			compatible = "regulator-fixed";
			reg = <2>;
			regulator-name = "5V";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			regulator-always-on;
		};

		reg_modem_3p8v: regulator@3 {
			compatible = "regulator-fixed";
			reg = <3>;
			regulator-name = "3p8v-he910";
			regulator-min-microvolt = <3800000>;
			regulator-max-microvolt = <3800000>;
			enable-active-high;
			gpio = <&gpio4 14 0>;
		};
	};

	leds {
		compatible = "gpio-leds";

		sts_red {
			gpios = <&gpio2 0 0>;
			default-state = "keep";
		};
		sts_green {
			gpios = <&gpio2 1 0>;
			default-state = "keep";
		};
		sts_blue {
			gpios = <&gpio2 2 0>;
			default-state = "keep";
		};

		eth_red {
			gpios = <&gpio2 3 0>;
			default-state = "keep";
		};
		eth_green {
			gpios = <&gpio2 4 0>;
			default-state = "keep";
		};
		eth_blue {
			gpios = <&gpio2 5 0>;
			default-state = "keep";
		};

		3g_red {
			gpios = <&gpio2 6 0>;
			default-state = "keep";
		};
		3g_green {
			gpios = <&gpio2 7 0>;
			default-state = "keep";
		};
		3g_blue {
			gpios = <&gpio2 8 0>;
			default-state = "keep";
		};

		extswitch {
			gpios = <&gpio0 22 0>;
			default-state = "off";
			linux,default-trigger = "transient";
		};
	};

	gpio-keys {
		compatible = "gpio-keys-polled";
		#address-cells = <1>;
		#size-cells = <0>;

		poll-interval = <100>;

		reset@0 {
			label = "reset";
			linux,code = <103>;
			gpios = <&gpio2 14 1>;
		};

		user@1 {
			label = "user";
			linux,code = <104>;
			gpios = <&gpio2 15 1>;
		};
	};

	usb-devices {
		compatible = "simple-bus";

		he910@0 {
			compatible = "telit,he910";
			reset-gpios = <&gpio4 11 GPIO_ACTIVE_HIGH>;
			on-off-gpios = <&gpio4 12 GPIO_ACTIVE_HIGH>;
			status-gpios = <&gpio2 13 GPIO_ACTIVE_HIGH>;
			dcd-gpios = <&gpio2 24 GPIO_ACTIVE_HIGH>;
			dsr-gpios = <&gpio2 25 GPIO_ACTIVE_HIGH>;
			dtr-gpios = <&gpio2 26 GPIO_ACTIVE_HIGH>;
			ring-gpios = <&gpio2 27 GPIO_ACTIVE_HIGH>;
			vin-supply = <&reg_modem_3p8v>;
		};
	};
};
